@import '..\app.styl';
// .container
//   scroll-behavior smooth 

.navbar 
  background-image linear-gradient(45deg, $navColor1, $navColor2)
  height 7vh
  box-shadow 0px 2px 8px 2px rgba(0,0,0,.3)
  .logo-container
   .shamagri-logo
      width 40px
      height 40px
      background #fafafa
  .text-title
    font-family 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
    text-transform uppercase
    color: #fafafa
    @media screen and (max-width: 720px) 
      opacity 0
 .web-bg_img
    width 100%
  .mobile-bg_img
    width 100%
  .devices_img
    width 30%
    position absolute 
    top 22vw
    right 5%
  .intro-text
    position absolute
    top 150px
    left 200px
    color #fafafa
    p.intro-head-text
        font-size 3vw
        margin-bottom 30px
        text-transform uppercase
        font-weight 500
        padding 10px 0  
      span 
        color #FFE45C
    .intro-body-text
      font-size 1.5vw
      line-height 1.2
      margin-top -5%
  .intro-section 
    height 100%    
.info-cards
  height 100%
  margin-top 400px
  text-align center
  background-image url("../../src/assets/img/cards-bg.png")
  background-size cover
  overflow hidden
  .cards-wrapper
    display inline-block
  .info-card
    width 250px
    height 320px
    display inline-block
    transition transform .1s ease
    .graphics_container
      width 100%
      background #F6ED7A
      padding 0
      text-align center
      img
        width 60%
        padding 5px
    .search-graphics_container
        height 155px
        background #7AF697
        .search-graphics
         width 100%
         margin 20px auto
    .quotation-graphics_container
        background #7AE2F6
    .info-text
      text-align left
      font-size 1.1em
      color #424242
      h5 
       padding 0
       margin 0
       font-weight 700 
    &:hover
      transform scale(1.1)
.hideBtn
  display none
.learn-more_btn
  text-align center
  position absolute
  top 44.5vw
  left 45vw
  h5
    margin 0
  p
    opacity .6
  .arrow-down_icon
    opacity 0
    transition all .45s linear
    animation fadeDown .68s infinite ease
// Media queries
@media screen and (min-width: 1140px) 
  .logo-container
    margin-left 5rem
  .login--btn
    margin-right 5rem
@media screen and (max-width: 1140px) 
  .intro-text 
    top: 100px;
    left: 60px;
  .logo-container
    margin-left 2rem
  .login--btn
    margin-right 2rem
@media screen and (max-width: 850px)
  .logo-container
    margin-left 2rem
  .login--btn
    margin-right 2rem
  .web-bg_img
    height 40vh
  .devices_img
    width 60%
    top 40%
    right 22%
  .intro-text
    width 80%
  .learn-more_btn
    display none
  p.intro-head-text
    font-size 4em
  p.intro-body-text
    font-size 2em
@media screen and (min-width: 565px)
  .mobile-bg_img
    display none
@media screen and (max-width: 564px)
  .logo-container
    margin-left 1rem
  .login--btn
    margin-right 1rem
  .mobile-bg_img
    margin-bottom .1rem
  .intro-section 
    background #49957D
  .info-cards
    margin 0
  .infoCards-header-text
    font-size 1.5em
    line-height 1 
    padding 20px 0
  .web-bg_img
    display none
  .devices_img
    width 70%
    margin 0 auto
    top 110vw
    right 15%
  .intro-text
    .email-input
      width 70%
    .get-started-section
      display none
      .sub-header
        font-size 1.5em
        top 0
    p.intro-head-text
      line-height 1
      font-size 2em
    p.intro-body-text
      font-size 1.4em
@media screen and (max-width: 650px)
  .intro-text
    top 10%
    left 3%
    h5
      font-size 1em
    p
      font-size 1.2em
    .p-breaker
      display none
  .info-cards
    .info-card 
      width 230px
      height 300px
      font-size .75em
      margin 0 auto
      margin-bottom 40px
      display block
// Animation keyframes
@keyframes fadeDown{
    from {
      opacity: 0; 
      transform: translateY(-2px);
      }
    to {
      opacity: 1; 
      transform: translateY(10px);
      }
  }
